<!DOCTYPE html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Skontaktuj się z nami, by uzyskać szczegółowe informacje na temat organizowanych przez nas wycieczek."
    />
    <title>Kontakt | Forest Website</title>
    <link rel="stylesheet" href="icofont/icofont.min.css" />
    <link rel="icon" type="image/png" href="/dist/img/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <!-- @includes 'styles.kit' -->
  </head>
  <body>
    <!-- @includes 'hamburger.kit' -->

    <!-- @includes 'nav.kit' -->

    <div class="wrapper-thinner">
      <h1 class="page-heading">Skontaktuj się z nami!</h1>
    </div>

    <main>
      <section class="contact">
        <div class="wrapper-wider">
          <form class="contact__form">
            <div class="contact__form-box">
              <label for="name">Imię:</label>
              <input
                class="ico-font"
                type="text"
                id="name"
                placeholder="&#xec8e; Podaj swoje imię..."
              />
              <p class="contact__error-text">error</p>
            </div>

            <div class="contact__form-box">
              <label for="email">E-mail:</label>
              <input
                class="ico-font"
                type="email"
                id="email"
                placeholder="&#xef12; Podaj swój adres e-mail..."
              />
              <p class="contact__error-text">error</p>
            </div>

            <div class="contact__form-box">
              <label for="msg">Treść wiadomości:</label>
              <textarea
                id="msg"
                cols="30"
                rows="10"
                placeholder="Napisz wiadomość..."
              ></textarea>
              <p class="contact__error-text">error</p>
            </div>
            <div class="contact__form-btns">
              <button class="contact__form-btn contact__form-btn--send">
                Wyślij
              </button>
              <button class="contact__form-btn contact__form-btn--clear">
                Wyczyść
              </button>
            </div>
            <div class="wrapper-wider">
              <div class="contact__form-popup">
                <p class="contact__form-popup-info">
                  Wiadomość została poprawnie wysłana!
                </p>
                <button
                  class="contact__form-btn contact__form-btn--popup-close"
                >
                  Zamknij
                </button>
              </div>
            </div>
          </form>
        </div>
      </section>
      <section class="google-map">
        <div class="wrapper-wider">
          <div class="google-map__container">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.889987497765!2d19.892205167078195!3d50.08834656217038!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2spl!4v1694364472651!5m2!1spl!2spl"
              width="400"
              height="300"
              style="border: 0"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
        </div>
      </section>
    </main>

    <!-- @include 'footer.kit' -->
    <script src="dist/js/main.min.js"></script>
    <script src="dist/js/contact.min.js"></script>
  </body>
</html>
